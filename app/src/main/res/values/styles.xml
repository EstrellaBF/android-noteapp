<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--Cambiando colores predefinidos. Eliminar el prefijo andoid:-->
        <!--Activated es la barra donde se escribe, normal es el placeholder o hit y highlight la descripcion de arriba y el Hint-->
        <item name="colorControlNormal">#212121</item>
        <item name="colorControlActivated">#212121</item>
        <item name="colorControlHighlight">#212121</item>
        <item name="android:textColorHint">#212121</item>
    </style>

</resources>
